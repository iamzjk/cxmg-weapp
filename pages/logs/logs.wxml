<!--logs.wxml-->
<view class="page">
    <!--
    <view class="page__hd">
        <view class="page__title">Preview</view>
        <view class="page__desc">表单预览</view>
    </view>
    -->
    <view class="page__bd" wx:for="{{logs}}" wx:for-item="log">
        <view class="weui-form-preview">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                    <label class="weui-form-preview__label">商品</label>
                    <em class="weui-form-preview__value">{{ log.product }}</em>
                </view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <label class="weui-form-preview__label">数量</label>
                    <span class="weui-form-preview__value">{{ log.quantity }}</span>
                </view>
                <view class="weui-form-preview__item">
                    <label class="weui-form-preview__label">金额</label>
                    <span class="weui-form-preview__value">{{ log.price }}</span>
                </view>
                <view class="weui-form-preview__item">
                    <label class="weui-form-preview__label">快递单号</label>
                    <span class="weui-form-preview__value">{{log.carrier}} {{ log.tracking }}</span>
                </view>
                <view class="weui-form-preview__item">
                    <label class="weui-form-preview__label">收件人</label>
                    <span class="weui-form-preview__value">{{ log.client }}</span>
                </view>
                <view class="weui-form-preview__item">
                    <label class="weui-form-preview__label">收件人电话</label>
                    <span class="weui-form-preview__value">{{ log.phone }}</span>
                </view>
                <view class="weui-form-preview__item">
                    <label class="weui-form-preview__label">订单时间</label>
                    <span class="weui-form-preview__value">{{ log.created_time }}</span>
                </view>
            </view>
            <view class="weui-form-preview__ft">
                <navigator url="../tracking/tracking?tracking={{log.tracking}}&carrier={{log.carrier}}" class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">查询快递</navigator>
            </view>
        </view>
    </view>
</view>